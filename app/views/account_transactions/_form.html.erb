<%= form_for(@account_transaction) do |f| %>
    <%= f.hidden_field :account_id , value: params[:account_id] %>
    <%= f.label :account, 'Conta' %>
    <%= f.label :date, 'Data' %>
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %>
    <%= f.label :tr_type, 'Tipo' %>
    <%= f.select :tr_type, ['D','C'] %>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>
    <%= f.label :balance, 'Quantia' %>
    <%= f.number_field :amount, step: 0.01 %>
    <%= f.submit 'Enviar', data: {confirm: 'Tem certeza?'}%>
<% end %>


