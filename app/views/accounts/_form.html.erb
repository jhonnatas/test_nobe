<%= form_for(@account) do |f| %>
<div class="card">
  <div class="card-body">
    
		<div class="mb-3">
			<%= f.label 'Conta ativa', { class: "form-label"} %>
			<%= f.check_box :account_active%>
		</div>

		<div class="mb-3">     
			<%= f.text_field :bk_branch, { class: "form-control", placeholder: "Agência" } %>
		</div>

		<div class="mb-3">   
			<%= f.text_field :bk_number, { class: "form-control", placeholder: "Número do banco" } %>
		</div>

		<div class="mb-3">   
			<%= f.text_field :account_number, { class: "form-control", placeholder: "Número da conta" } %>
		</div>	

		<div class="mb-3">
			<%= f.label 'Depósito inicial', { class: "form-label"} %>
			<%= f.number_field :balance, min: 0.00, step: 0.01, class: "form-control" %>
		</div>

		<div class="mb-3">      
			<%= f.text_area :details, { class: "form-control", placeholder: "Detalhes" } %>
		</div>

    <%= f.submit "Criar", class: "btn btn-primary" %>

  </div>
</div>
<% end %>